<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id) %>
      <%= link_to "Edit",edit_book_path(book.id) %>
      <%= link_to "Destroy",book_path(book.id),method: :delete,data: {confirm: "OK?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<div class="create-book">
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
    <div class="errors-box">
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>New book</h3>
  <%= form_with model: @book,url: (books_path),method: :post do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_field :body %>
    <p>
      <%= f.submit "Create Book" %>
    </p>
  <% end %>
</div>