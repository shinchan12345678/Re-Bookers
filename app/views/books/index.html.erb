
<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2>ブックズ</h2>
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>オピニオン</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show",book_path(book.id) %>
            <%= link_to "Edit",edit_book_path(book.id) %>
            <%= link_to "Destroy",book_path(book.id),method: :delete,data: {confirm: "OK?"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="create-book">
        <% if @book.errors.any? %>
        <div class="error-content">
          <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
          <div class="errors-box">
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
        <% end %>

        <h3>クリエイト</h3>
        <%= form_with model: @book,url: (books_path),method: :post do |f| %>
          <h5>タイトル</h5>
          <%= f.text_field :title ,class: "is-invalid" %>
          <h5>オピニオン</h5>
          <%= f.text_field :body ,class: "is-invalid" %>
          <p>
            <%= f.submit "Create Book" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>