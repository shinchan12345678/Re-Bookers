<div class="create-book">
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
    <div class="errors-box">
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>


<h2>Eding Book</h2>
<%= form_with model: @book,url:(book_path(@book.id)),method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <p><%= f.submit "Update Book" %></p>
<% end %>


<p><%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",books_path %></p>