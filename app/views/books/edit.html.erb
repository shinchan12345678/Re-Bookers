
<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
    <div class="create-book">
      <h2 class="mt-5">エディツト</h2>
      <% if @book.errors.any? %>
        <p class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
        <div class="errors-box">
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
        <%= form_with model: @book,url:(book_path(@book.id)),method: :patch do |f| %>
          <h5 class="is-invalid">タイトル</h5>
          <%= f.text_field :title %>
          <h5 class="is-invalid">オピニオン</h5>
          <%= f.text_field :body %>
          <p class="mt-3"><%= f.submit "Update Book",{class: "btn btn-outline-success"} %></p>
        <% end %>
      <% else %>
    </div>
      <%= form_with model: @book,url:(book_path(@book.id)),method: :patch do |f| %>
        <h5>タイトル</h5>
        <%= f.text_field :title %>
        <h5>オピニオン</h5>
        <%= f.text_field :body %>
        <p class="mt-3"><%= f.submit "Update Book",{class: "btn btn-outline-success"} %></p>
      <% end %>
    <% end %>


    <p><%= link_to "Show",book_path(@book.id),{class: "btn btn-outline-danger px-2 mx-auto"} %> | <%= link_to "Back",books_path,{class: "btn btn-outline-info px-2 mx-auto"} %></p>
    </div>
  </div>
</div>